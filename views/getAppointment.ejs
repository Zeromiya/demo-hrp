<div class="container">
    <div class ="row">
        <% for (var k = 0,enable = true; k < resulty.rows.length; k++, enable=true) { %>
        <div class="card" style="width:20rem;margin:20px 20px 24px 20px">
            <img class="card-img-top" src="<%= resulty.rows[k][3] %>" alt="image" style="width:100%">
            <div class="card-body" style="margin : 20px">
                <h4 class="card-title"><%= resulty.rows[k][1] %></h4>
                <p class="card-text">Field : <%= resulty.rows[k][2] %></p>
                <div class="input-group date" id="datetimepicker<%= resulty.rows[k][0] %>" data-target-input="nearest">
                    <input id="time<%= resulty.rows[k][0] %>" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker<%= resulty.rows[k][0] %>"/>
                    <div class="input-group-append" data-target="#datetimepicker<%= resulty.rows[k][0] %>" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker<%= resulty.rows[k][0] %>').datetimepicker();
                    });
                </script>
                <br>
                <br>
                <a name="butts" id = "<%= resulty.rows[k][0] %>" class="btn btn-primary">Get An Appointment</a>
            </div>
        </div>
        <%}%>
    </div>
    </div>
